# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.IndexController.index

# GET     /test                       controllers.Application.create

# user administration
GET     /index                      controllers.IndexController.index
# POST    /user/add                 controllers.Application.newUser
# POST    /users/:id/delete           controllers.Application.deleteUser(id: String)
# GET    /controllers/ExtractionController/:user                controllers.ExtractionController.approve(user: List[String])
# POST    /controllers/ExtractionController/:fieldsNames               controllers.ExtractionController.checkedValues(fieldsNames: String)
POST    /controllers/ExtractionController/               controllers.ExtractionController.checkedValues
GET     /controllers/jsRoutes             controllers.ExtractionController.javascriptRoutes

# Affiche les onglets
GET     /flux                        controllers.FluxController.displayFlux
POST    /fluxTemp                    controllers.IndexController.checkPassword
GET     /extraction                  controllers.ExtractionController.displayExtraction

# chart plotting
GET     /googlechart                controllers.Application.googleChart
GET     /highchart                  controllers.Application.highChart

# # supervisor
# GET     /ec2/start                  controllers.Application.startEC2
# GET     /ec2/stop                   controllers.Application.stopEC2

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)


